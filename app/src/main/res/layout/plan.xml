<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:id="@+id/my_plan_activity"
    android:padding="16dp">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="My Plan"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Daily Plan Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvDailyPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Plan"
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- Metrics Grid Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Calories Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#FFF8E1"
                app:cardCornerRadius="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <!-- Icon on the Top-Right -->
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_calories"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/daily_planing_tvCalories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/intial_val"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="24sp"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kcal"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Steps Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#40673AB7"
                app:cardCornerRadius="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <!-- Icon on the Top-Right -->
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_steps"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Steps"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/daily_planing_tvSteps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/intial_val"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="24sp"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Steps"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Sleep Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#E8F5E9"
                app:cardCornerRadius="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <!-- Icon on the Top-Right -->
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_sleep"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleep"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/daily_planing_tvSleep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/intial_val"                            android:textColor="@color/primaryTextColor"
                            android:textSize="24sp"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hours"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Water Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#E1F5FE"
                app:cardCornerRadius="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <!-- Icon on the Top-Right -->
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_water"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/daily_planing_tvWater"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/intial_val"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="24sp"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liters"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Calories Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#C0E91E63"
                    app:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <!-- Icon on the Top-Right -->
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_run"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" />

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Running"
                                android:textStyle="bold"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/daily_planing_tvrunning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/intial_val"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="24sp"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Km"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Steps Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#B6CDDC39"
                    app:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <!-- Icon on the Top-Right -->
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_swim"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" />

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Swimming"
                                android:textStyle="bold"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/daily_planing_tvSwimming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/intial_val"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="24sp"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="m"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Sleep Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#AA009688"
                    app:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <!-- Icon on the Top-Right -->
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_skipping_rope"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" />

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skipping Rope"
                                android:textStyle="bold"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/daily_planing_tvSkippingRope"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/intial_val"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="24sp"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="times"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Water Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#B800BCD4"
                    app:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <!-- Icon on the Top-Right -->
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_cycling"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" />

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cycling"
                                android:textStyle="bold"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/daily_planing_tvCycling"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/intial_val"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="24sp"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="km"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>